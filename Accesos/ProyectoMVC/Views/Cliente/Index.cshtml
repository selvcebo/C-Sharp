@model IEnumerable<CRUD_TRABAJO.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Clientes Registrados</h3>
            <a asp-action="Crear" class="btn btn-light text-primary fw-bold">
                <i class="bi bi-person-plus"></i> Nuevo Cliente
            </a>
        </div>

        <div class="card-body">
           

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Mensaje"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Documento</th>
                            <th>Teléfono</th>
                            <th>Correo Electrónico</th>
                            <th>Dirección</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var cliente in Model)
                            {
                                <tr>
                                    <td>@cliente.Nombre</td>
                                    <td>@cliente.Apellido</td>
                                    <td>@cliente.NumeroDocumento</td>
                                    <td>@cliente.Telefono</td>
                                    <td>@cliente.CorreoElectronico</td>
                                    <td>@cliente.Direccion</td>
                                    <td class="text-center">
                                        <a asp-action="Editar" asp-route-id="@cliente.ClienteId" class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                        <a asp-action="Detalles" asp-route-id="@cliente.ClienteId" class="btn btn-sm btn-info text-white me-1">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@cliente.ClienteId" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No hay clientes registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
