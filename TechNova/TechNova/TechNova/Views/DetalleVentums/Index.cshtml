@model IEnumerable<TechNova.Models.VentaResumen>

@{
    ViewData["Title"] = "Ventas (resumen)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ventas (resumen)</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Venta ID</th>
            <th>Fecha</th>
            <th>Líneas</th>
            <th>Suma Subtotales</th>
            <th>Total Venta (si aplica)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.VentaId</td>
            <td>@(item.FechaVenta?.ToString("g") ?? "-")</td>
            <td>@item.ItemsCount</td>
            <td>@item.SubtotalSum.ToString("C")</td>
            <td>@item.TotalVenta.ToString("C")</td>
            <td>
                <!-- Abrir el desglose completo en la vista de Ventas (ya contiene Model.Detalles) -->
                <a asp-controller="Ventas" asp-action="Details" asp-route-id="@item.VentaId" class="btn btn-sm btn-info">Detalles</a>
            </td>
        </tr>
    }
    </tbody>
</table>
