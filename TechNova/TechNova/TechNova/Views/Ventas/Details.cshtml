@model TechNova.Models.Venta

@{
    ViewData["Title"] = "Detalles de la Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles de la Venta</h1>

<div>
    <h4>Información de la Venta</h4>
    <hr />
    <dl class="row">
        <!-- Fecha -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaVenta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaVenta)
        </dd>

        <!-- Total -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalVenta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalVenta)
        </dd>

        <!-- Cliente -->
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.NombreCompleto)
        </dd>
    </dl>
</div>

<!-- 🔎 Detalles de la venta -->
<div>
    <h4>Productos en esta venta</h4>
    <hr />
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
                <th>Producto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var detalle in Model.Detalles)
        {
            <tr>
                <td>@detalle.Cantidad</td>
                <td>@detalle.PrecioUnitario</td>
                <td>@detalle.Subtotal</td>
                <td>@detalle.Producto.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-controller="DetalleVentums" asp-route-id="@detalle.DetalleId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-controller="DetalleVentums" asp-route-id="@detalle.DetalleId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!-- 🔎 Botón para agregar producto -->
<div class="mt-3">
    <a asp-action="AddDetalle" asp-route-ventaId="@Model.VentaId" class="btn btn-primary">Agregar producto</a>

</div>

<!-- 🔎 Acciones generales -->
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.VentaId" class="btn btn-warning">Editar venta</a>
    <a asp-action="Delete" asp-route-id="@Model?.VentaId" class="btn btn-danger">Eliminar venta</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
