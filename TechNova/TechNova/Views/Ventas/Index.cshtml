@model IEnumerable<TechNova.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listado de Ventas</h1>

<!-- Botón para crear nueva venta -->
<p>
    <a asp-action="Create" class="btn btn-primary">Registrar venta</a>
</p>

<!-- Tabla de ventas -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FechaVenta)</th>
            <th>@Html.DisplayNameFor(model => model.TotalVenta)</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FechaVenta)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalVenta)</td>
                <td>@Html.DisplayFor(modelItem => item.Cliente.NombreCompleto)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VentaId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.VentaId" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.VentaId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
