@model TechNova.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles del Producto</h1>

<div>
    <h4>Información</h4>
    <hr />
    <dl class="row">
        <!-- Nombre -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <!-- Descripción -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <!-- Precio unitario -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnitario)
        </dd>

        <!-- Stock disponible -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StockDisponible)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StockDisponible)
        </dd>
    </dl>
</div>

<!-- 🔎 Acciones -->
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.ProductoId" class="btn btn-warning">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model?.ProductoId" class="btn btn-danger">Eliminar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
