@model TechNova.Models.DetalleVentum

@{
    ViewData["Title"] = "Editar Detalle de Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Detalle</h1>

<h4>Detalle de Venta</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <!-- 🔎 Errores generales -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ID oculto -->
            <input type="hidden" asp-for="DetalleId" />
            <input type="hidden" asp-for="VentaId" />

            <!-- Producto (puedes dejarlo fijo o editable según tu lógica) -->
            <div class="form-group mb-3">
                <label asp-for="ProductoId" class="control-label"></label>
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>

            <!-- Cantidad -->
            <div class="form-group mb-3">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                <a asp-action="Details" asp-controller="Ventas" asp-route-id="@Model.VentaId" class="btn btn-secondary ms-2">Volver a la venta</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- 🔎 Scripts de validación en cliente -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
